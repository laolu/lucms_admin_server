# Application
APP_NAME=LUCMS
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8080
APP_PORT=8080

# Database
DB_TYPE=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=lucms
DB_USERNAME=root
DB_PASSWORD=123456

# JWT
JWT_SECRET=your-super-secret-key-please-change-in-production
JWT_EXPIRES_IN=24h

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=null
REDIS_DB=0

# File Upload
UPLOAD_DRIVER=local
UPLOAD_PATH=uploads
MAX_FILE_SIZE=10485760 # 10MB

# Log
LOG_LEVEL=debug
LOG_PATH=logs

# Cors
CORS_ORIGIN=http://localhost:8080
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_CREDENTIALS=true 